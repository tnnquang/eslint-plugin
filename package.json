{
  "name": "@tnnquang/eslint",
  "version": "2.0.1",
  "description": "ESLint plugin with custom rules for TypeScript frameworks (React, Vue, Angular, NestJS, Next.js, Nuxt)",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "react",
    "vue",
    "angular",
    "nestjs",
    "nextjs",
    "nuxt",
    "javascript",
    "typescript",
    "linting",
    "no-namespace",
    "no-arrow-component",
    "no-arrow-function",
    "enforce-path-alias"
  ],
  "homepage": "https://github.com/tnnquang/eslint-plugin#readme",
  "bugs": {
    "url": "https://github.com/tnnquang/eslint-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tnnquang/eslint-plugin.git"
  },
  "license": "MIT",
  "author": "Tran Ngoc Nhat Quang",
  "type": "commonjs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint lib/ --config eslint.config.dev.js",
    "prepublishOnly": "npm run lint && npm test"
  },
  "peerDependencies": {
    "eslint": ">=7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@typescript-eslint/rule-tester": "^6.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ]
}
